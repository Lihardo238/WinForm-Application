<Window x:Class="WPF_Pertemuan3_PBKK_B.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Pertemuan3_PBKK_B"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Border Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ListView x:Name="nameListBox" Grid.Column="0" Margin="10" />
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Enter a Name:" FontWeight="Bold" Margin="0 0 0 10" />
                <TextBox x:Name="nameTextBox" Width="130" />
                <Button Content="Add Name" Click="AddNameButton_Click" Width="85" Margin="0 10" />
            </StackPanel>
        </Grid>
    </Border>

</Window>
